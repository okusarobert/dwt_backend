# ElectrumX SPV Configuration
# This configuration runs ElectrumX in SPV mode (headers only)

# Core Configuration
COIN=Bitcoin
NET=testnet
DB_DIRECTORY=./electrumx_db
DAEMON_URL=http://localhost:18332

# Database Configuration (LevelDB for headers)
DB_ENGINE=leveldb

# Server Configuration
HOST=localhost
TCP_PORT=50001
SSL_PORT=50002

# SSL Configuration (required for SSL ports)
SSL_CERTFILE=./electrumx.crt
SSL_KEYFILE=./electrumx.key

# Peer Discovery (optional for SPV)
PEER_DISCOVERY=OFF
PEER_ANNOUNCE=NO

# Logging
LOG_LEVEL=INFO
ANON_LOGS=YES

# Performance (optimized for SPV)
CACHE_MB=100
MAX_SESSIONS=100
MAX_SEND=1000000
MAX_RECV=1000000

# Timeouts
REQUEST_TIMEOUT=30
SESSION_TIMEOUT=600

# Donation (optional)
DONATION_ADDRESS=

# Banner
BANNER_FILE=
